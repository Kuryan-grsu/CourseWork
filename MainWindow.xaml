<Window x:Class="CourceWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourceWork"
        mc:Ignorable="d"
        Title="Бронирование столиков" Height="550" Width="950">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150px"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox
            x:Name="GroupListBox"
            Background="#303030"
            Foreground="White"
            SelectionChanged="ListBox_SelectionChanged">
            <TextBlock
    Text="Все столики"/>
            <TextBlock
    Text="Добавить столик"/>
        </ListBox>
        <Grid Grid.Column="1" Background="#151515">
            <Frame x:Name="WindowPage" NavigationUIVisibility="Hidden" Padding="20"/>
        </Grid>
    </Grid>
</Window>
